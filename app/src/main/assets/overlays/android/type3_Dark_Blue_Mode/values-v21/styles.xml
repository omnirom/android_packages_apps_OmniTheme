        <item name="android:textColorSecondary">#ffdddddd</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:navigationBarColor">@android:color/holo_blue_dark</item>
    </style>
    <style name="Theme.DeviceDefault" parent="@android:style/Theme.Material">
        <item name="android:colorPrimary">@android:color/holo_blue_light</item>
        <item name="android:colorBackground">@android:color/holo_blue_dark</item>
        <item name="android:windowBackground">@android:color/holo_blue_dark</item>
        <item name="android:navigationBarColor">@android:color/holo_blue_dark</item>
    </style>
